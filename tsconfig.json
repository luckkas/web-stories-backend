{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "declaration": true,
    "outDir": "./dist/lib",
    "declarationDir": "./dist/@types",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "noImplicitAny": true,
    "paths": {
      "@domain/*": ["app/domain/*"],
      "@modules/*": ["app/modules/*"],
      "@infra/*": ["infra/*"]
    }
  },

  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
